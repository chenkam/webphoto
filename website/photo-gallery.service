[Unit]
Description=Photo Gallery Web Application
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/path/to/photo-gallery
Environment="PATH=/path/to/photo-gallery/venv/bin"
ExecStart=/path/to/photo-gallery/venv/bin/gunicorn -w 4 -b 0.0.0.0:5000 app:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

